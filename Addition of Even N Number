//Addition of N Even Number
#include<stdio.h>

int Addition(int iNo)
{
    int iCnt=0,iSum=0;
    {
        for(iCnt=0;iCnt<=iNo;iCnt++)
        {
            if(iCnt%2!=0)
            {
               iSum=iSum+iCnt;
            }
           
        }
    }return iSum;
}
int main()
{
    int iValue=0,iRet=0;
    printf("Enter Number\n");
    scanf("%d",&iValue);
    iRet=Addition(iValue);
    printf("Addition is:%d\n",iRet);
    
    return 0;
    
}
